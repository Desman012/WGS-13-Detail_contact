<div class="container text-center">
    <h2 class="py-5">Contact</h2>
    <br>
    <h5>Table Contact</h5>

    <!-- membuat tabel -->
    <table class="table table-striped w-50 text-center m-auto">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Mobile</th>
            <th>Action</th>
        </tr>
        <% x = 1 %>

        <!-- memanampilkan isi dari data.json -->
        <% contacts.forEach(elm => { %>
        <tr>
            <td><%= x %> </td>
            <td><%= elm.name %></td>
            <td><%= elm.tlp %></td>
            <td>
                <a class="badge rounded-pill text-bg-success text-decoration-none py-2 px-3"
                    href="/contact/<%= elm.name %> ">Detail</a>
            </td>
        </tr>
        <% x+=1 %>
        <% }) %>
    </table>
</div>